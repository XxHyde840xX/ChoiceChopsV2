	</equippedStatOffsets>
    <costList>
		<Steel>70</Steel>
		<Cloth>5</Cloth>
		<ComponentSpacer>1</ComponentSpacer>
    </costList>
    <recipeMaker>
		<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
		<researchPrerequisite>Fabrication</researchPrerequisite>
		<skillRequirements>
			<Crafting>7</Crafting>
