<Defs>

 <!--__________ Fallout New Vegas Pistols __________-->     

 <!-- 9mm Pistol  -->

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>FCP_Gun_9mm_Pistol</defName>
    <label>9mm Pistol</label>
    <description>The standard sidearm for NCR soldiers and many other inhabitants of the wasteland. This no-frills semi-automatic handgun requires little to no training and can be utilized, to some degree, by even the most inexperienced shooters. However, it’s also not that powerful.</description>
    <graphicData>
      <texPath>Weapons/Pistol/FCP_9mm_Pistol</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconScale>1.5</uiIconScale>
    <soundInteract>Interact_Autopistol</soundInteract>
    <recipeMaker>
      <researchPrerequisite>BlowbackOperation</researchPrerequisite>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
    <weaponTags>
      <li>SimpleGun</li>
    </weaponTags>
    <statBases>
      <WorkToMake>5000</WorkToMake>
      <Mass>1.2</Mass>
      <AccuracyTouch>0.80</AccuracyTouch>
      <AccuracyShort>0.70</AccuracyShort>
      <AccuracyMedium>0.40</AccuracyMedium>
      <AccuracyLong>0.30</AccuracyLong>
      <RangedWeapon_Cooldown>1</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>30</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_9mm</defaultProjectile>
        <warmupTime>0.3</warmupTime>
        <range>25.9</range>
        <soundCast>Shot_Autopistol</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_9mm</defName>
    <label>9mm bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>10</damageAmountBase>
      <speed>48</speed>
    </projectile>
  </ThingDef>

