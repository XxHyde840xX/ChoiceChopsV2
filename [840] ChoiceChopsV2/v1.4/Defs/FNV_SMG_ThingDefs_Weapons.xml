<Defs>

 <!-- Silenced .22 SMG -->

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>FCP_Gun_Silenced_22_SMG</defName>
    <label>Silenced .22 SMG</label>
    <description>The silenced .22 SMG is a distinctive weapon with its unusual pan magazine, which sits atop the gun rather than under and a silencer integrated into its barrel. Its light weight, built-in silencer and concealability make it a popular choice among assassins.</description>
    <graphicData>
      <texPath>Weapons/SMG/FCP_Silenced_22_SMG</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_SMG</soundInteract>
    <recipeMaker>
      <researchPrerequisite>GasOperation</researchPrerequisite>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
    <thingSetMakerTags><li>RewardStandardQualitySuper</li></thingSetMakerTags>
    <statBases>
      <WorkToMake>14000</WorkToMake>
      <Mass>2.5</Mass>
      <AccuracyTouch>0.85</AccuracyTouch>
      <AccuracyShort>0.70</AccuracyShort>
      <AccuracyMedium>0.30</AccuracyMedium>
      <AccuracyLong>0.15</AccuracyLong>
      <RangedWeapon_Cooldown>1.3</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>75</Steel>
      <ComponentIndustrial>4</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_22mm</defaultProjectile>
        <warmupTime>0.7</warmupTime>
        <range>18.9</range>
        <burstShotCount>4</burstShotCount>
        <ticksBetweenBurstShots>11</ticksBetweenBurstShots>
        <soundCast>Shot_Silenced_SMG</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
      <li>IndustrialGunAdvanced</li>
    </weaponTags>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_22mm</defName>
    <label>.22 bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>9</damageAmountBase>
      <speed>45</speed>
    </projectile>
  </ThingDef>

