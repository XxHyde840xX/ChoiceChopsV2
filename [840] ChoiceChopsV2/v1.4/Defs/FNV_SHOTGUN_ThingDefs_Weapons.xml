 <!-- Hunting Shotgun Unique -->

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>FCP_Gun_Dinner_Bell</defName>
    <label>12ga Pump-Action "Dinner Bell"</label>
    <description>A unique 12-gauge hunting shotgun. It appears to made out of a different, darker metal than the standard variant and features camouflaged patterns on the stock and pump. It does more damage and has lower spread as well.</description>
    <graphicData>
      <texPath>Weapons/Shotgun/FCP_Dinner_Bell</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Shotgun</soundInteract>
    <statBases>
      <MarketValue>10000</MarketValue>
      <WorkToMake>20000</WorkToMake>
      <Mass>3.4</Mass>
      <AccuracyTouch>0.80</AccuracyTouch>
      <AccuracyShort>0.90</AccuracyShort>
      <AccuracyMedium>0.80</AccuracyMedium>
      <AccuracyLong>0.70</AccuracyLong>
      <RangedWeapon_Cooldown>1.15</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>60</Steel>
      <ComponentIndustrial>9</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <skillRequirements>
        <Crafting>15</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>12g_Shell_Shotgun</defaultProjectile>
        <warmupTime>0.9</warmupTime>
        <range>15.9</range>
        <soundCast>Shot_Shotgun</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

